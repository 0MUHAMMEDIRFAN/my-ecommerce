<div class="custom-container">
    <h1 class="text-center text-primary">Login Form</h1>
    <div class="jumbotron bg-secondary">
        <br>
        {{#if status.state}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{status.message}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}
        {{#if status}}
        {{#unless status.state}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{status.message}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/unless}}
        {{/if}}

        <form action="/login" id="login" method="POST">
            <div class="form-group">
                <label for="email">Email Id <span class="text-danger">*</span></label>
                <input type="email" class="form-control" name="username" id="email" placeholder="Enter your email id" required='true' autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password" required="true">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-info btn-block">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        New user? Register <a href="/signup">here</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>