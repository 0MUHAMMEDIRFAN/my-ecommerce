<div class="custom-container">
    <div class="jumbotron bg-secondary">
        <h3 class="text-center text-primary">Registration Form</h3>
        <br>
        {{!-- Display errors --}}
        {{!-- if condition --}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error.message}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}
        {{!-- End If Condition --}}

        <form method="post" id="registration" action="/signup">
            <div class="form-group">
                <label for="fullname">Full Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter Your First Name" value="{{fname}}" required>
            </div>
            <div class="form-group">
                <label for="email">Email Id <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="email" id="email" placeholder="Enter your email id" value="{{email}}" required>
            </div>
            <div class="form-group">
                <label for="password">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password" value="{{password}}" required>
            </div>
            <div class="form-group">
                <label for="cpassword">Confirm Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" name="cpassword" id="cpassword" placeholder="Enter Same as Password" value="{{cpassword}}">
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-info btn-block">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        Already user? Login <a href="/login">here</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>